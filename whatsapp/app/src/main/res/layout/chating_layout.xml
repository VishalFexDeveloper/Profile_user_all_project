<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="horizontal"    android:paddingHorizontal="12dp"    android:paddingVertical="8dp"    android:layout_height="wrap_content">    <com.google.android.material.imageview.ShapeableImageView        android:id="@+id/chating_icon"        android:layout_width="48dp"        android:layout_height="48dp"        app:shapeAppearance="@style/cornerSize"        android:src="@drawable/baseline_account_circle_24"        android:scaleType="centerCrop"/>    <LinearLayout        android:layout_width="0dp"        android:layout_marginStart="8dp"        android:layout_height="match_parent"        android:orientation="vertical"        android:layout_weight="1">        <TextView            android:id="@+id/chating_name"            android:layout_width="match_parent"            android:layout_weight="1"            android:textSize="16sp"            android:textColor="#101010"            android:text="hello"            android:gravity="center_vertical|start"            android:layout_height="0dp"/>        <TextView            android:id="@+id/chatin_message"            android:layout_width="match_parent"            android:layout_weight="1"            android:textSize="14sp"            android:textColor="#6D6D6D"            android:text="hello"            android:gravity="center_vertical|start|top"            android:layout_height="0dp"/>    </LinearLayout></LinearLayout>