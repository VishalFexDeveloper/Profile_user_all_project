<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <androidx.cardview.widget.CardView        android:layout_width="match_parent"        app:cardElevation="15dp"        app:cardCornerRadius="8dp"        android:layout_marginHorizontal="15dp"        android:layout_marginVertical="10dp"        android:layout_height="120dp">        <LinearLayout            android:layout_width="match_parent"            android:orientation="vertical"            android:layout_height="match_parent">            <LinearLayout                android:layout_width="match_parent"                android:layout_margin="8dp"                android:orientation="horizontal"                android:gravity="center_vertical"                android:layout_height="wrap_content">                <com.google.android.material.imageview.ShapeableImageView                    android:layout_width="48dp"                    android:layout_height="48dp"                    android:scaleType="centerCrop"                    app:shapeAppearance="@style/image_corner"                    android:src="@drawable/image_1"/>                <TextView                    android:id="@+id/userdataName"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="user name"                    android:layout_marginStart="10dp"                    android:textSize="18sp"                    android:maxLines="1"                    android:textColor="@color/darkWhite"                    />                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="match_parent">                    <ImageView                        android:id="@+id/deleteBtn"                        android:layout_width="30sp"                        android:layout_height="30sp"                        android:layout_alignParentEnd="true"                        android:layout_marginStart="10dp"                        android:layout_marginTop="10dp"                        android:layout_marginEnd="10dp"                        android:layout_marginBottom="10dp"                        android:src="@drawable/icons_delete"                        app:tint="@color/darkWhite" />                </RelativeLayout>            </LinearLayout>            <TextView                android:id="@+id/userdataNumber"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="user number"                android:layout_marginStart="10dp"                android:textSize="16sp"                android:maxLines="1"                android:paddingHorizontal="8dp"                android:textColor="#ABA8A8"                />            <TextView                android:id="@+id/userdataEmail"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="user email"                android:layout_marginStart="10dp"                android:textSize="16sp"                android:paddingTop="5dp"                android:paddingHorizontal="8dp"                android:textColor="#ABA8A8"                />        </LinearLayout>    </androidx.cardview.widget.CardView></LinearLayout>