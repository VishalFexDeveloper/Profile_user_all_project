<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white"    android:layout_alignParentBottom="true"    tools:context=".MainActivity">    <ImageView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:background="@drawable/img_2"        />    <ImageView        android:id="@+id/nextPageBtn"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:src="@drawable/icons_home"        android:layout_margin="15dp"        android:layout_alignParentEnd="true"        app:tint="@color/darkWhite" />    <androidx.cardview.widget.CardView        android:layout_width="match_parent"        app:cardUseCompatPadding="true"        app:cardElevation="15dp"        android:backgroundTint="@color/white"        android:layout_alignParentBottom="true"        android:layout_marginBottom="10dp"        android:layout_marginHorizontal="5dp"        app:cardCornerRadius="10dp"        android:layout_height="wrap_content">        <LinearLayout            android:layout_width="match_parent"            android:orientation="vertical"            android:layout_height="wrap_content">            <RelativeLayout                android:id="@+id/handan"                android:layout_width="match_parent"                android:layout_margin="15dp"                android:orientation="horizontal"                android:gravity="center_vertical|end"                android:layout_height="wrap_content">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="SAVE DATA"                    android:textColor="#787878"                    android:layout_centerVertical="true"                    android:layout_alignParentStart="true"                    android:textStyle="bold"                    android:textSize="22sp"/>                <ProgressBar                    android:id="@+id/progressBar"                    android:visibility="gone"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerInParent="true"                    android:progressTint="#787878"                    />                <androidx.cardview.widget.CardView                    android:layout_width="80dp"                    android:layout_height="80dp"                    app:cardCornerRadius="40dp"                    android:layout_alignParentEnd="true"                    android:layout_gravity="end"                    >                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:src="@drawable/image_1"                        android:scaleType="centerCrop"/>                </androidx.cardview.widget.CardView>            </RelativeLayout>            <LinearLayout                android:layout_width="match_parent"                android:orientation="vertical"                android:gravity="bottom"                android:layout_marginTop="10dp"                android:layout_height="wrap_content">                <EditText                    android:id="@+id/userName"                    android:layout_width="match_parent"                    android:layout_height="60dp"                    android:paddingStart="8dp"                    android:shadowColor="@color/black"                    android:elevation="15dp"                    android:textColor="#5D5D5D"                    android:singleLine="true"                    android:layout_marginTop="25dp"                    android:inputType="textPersonName"                    android:layout_marginHorizontal="15dp"                    android:background="@drawable/edit_textbkd"                    android:hint="user name"                    android:textColorHint="@color/darkWhite"                    tools:ignore="RtlSymmetry" />                <EditText                    android:id="@+id/userNumber"                    android:layout_width="match_parent"                    android:layout_height="60dp"                    android:paddingStart="8dp"                    android:layout_marginTop="15dp"                    android:shadowColor="@color/black"                    android:elevation="15dp"                    android:textColorHint="@color/darkWhite"                    android:inputType="number"                    android:textColor="#5D5D5D"                    android:singleLine="true"                    android:layout_marginHorizontal="15dp"                    android:background="@drawable/edit_textbkd"                    android:hint="Enter number"                    tools:ignore="RtlSymmetry,TextFields" />                <EditText                    android:id="@+id/userEmail"                    android:layout_width="match_parent"                    android:layout_height="60dp"                    android:paddingStart="8dp"                    android:shadowColor="@color/black"                    android:layout_marginTop="15dp"                    android:elevation="15dp"                    android:textColorHint="@color/darkWhite"                    android:textColor="#5D5D5D"                    android:inputType="textEmailSubject"                    android:singleLine="true"                    android:layout_marginHorizontal="15dp"                    android:background="@drawable/edit_textbkd"                    android:hint="Enter email"/>                <EditText                    android:id="@+id/userCityName"                    android:layout_width="match_parent"                    android:layout_height="60dp"                    android:paddingStart="8dp"                    android:shadowColor="@color/black"                    android:layout_marginTop="15dp"                    android:elevation="15dp"                    android:textColor="#5D5D5D"                    android:inputType="text"                    android:singleLine="true"                    android:textColorHint="@color/darkWhite"                    android:layout_marginHorizontal="15dp"                    android:maxLength="10"                    android:layout_marginBottom="15dp"                    android:background="@drawable/edit_textbkd"                    android:hint="Enter city name"                    tools:ignore="RtlSymmetry,TextFields" />            </LinearLayout>            <androidx.appcompat.widget.AppCompatButton                android:id="@+id/saveBtn"                android:layout_width="match_parent"                android:layout_height="58dp"                android:layout_marginHorizontal="15dp"                android:backgroundTint="#787878"                android:text="SAVE"                android:textColor="@color/white"                android:textSize="25sp"                android:layout_marginBottom="15dp"                android:layout_gravity="bottom"                />        </LinearLayout>    </androidx.cardview.widget.CardView></RelativeLayout>