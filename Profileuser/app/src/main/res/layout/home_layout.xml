<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"    android:layout_height="wrap_content">    <VideoView        android:id="@+id/videoView"        android:layout_width="match_parent"        android:layout_height="220dp"        />    <LinearLayout        android:layout_width="match_parent"        android:orientation="horizontal"        android:gravity="center_vertical"        android:layout_marginHorizontal="8dp"        android:layout_marginTop="4dp"        android:layout_height="wrap_content">        <com.google.android.material.imageview.ShapeableImageView            android:id="@+id/homeImg"            android:layout_width="44dp"            android:layout_height="44dp"            app:shapeAppearance="@style/image_corner"            android:src="@drawable/profile_icon"            android:scaleType="centerCrop"            android:background="@color/white"            android:layout_gravity="end"            />        <LinearLayout            android:layout_width="0dp"            android:layout_weight="1"            android:layout_marginStart="4dp"            android:orientation="vertical"            android:gravity="center_vertical"            android:layout_height="match_parent">            <TextView                android:id="@+id/homeName"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="vishal fex"                android:textSize="16sp"                android:layout_marginTop="3dp"                android:textStyle="bold"                android:maxLines="1"                android:textColor="@color/black"                />            <TextView                android:id="@+id/homeCountryName"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="vishal fex"                android:textSize="14sp"                android:maxLines="1"                android:textColor="@color/black"                />        </LinearLayout>        <ImageView            android:id="@+id/deleteMenu"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            app:tint="#454343"            android:src="@drawable/menu_vertical"/>    </LinearLayout>    <TextView        android:id="@+id/homeBio"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="@string/app_name"        android:paddingStart="54dp"        android:textSize="14sp"        android:paddingEnd="10dp"        android:layout_marginBottom="18dp"        android:textColor="#848383"        /></LinearLayout>