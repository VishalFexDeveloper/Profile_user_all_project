<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginHorizontal="10dp"        android:layout_marginVertical="8dp"        android:background="@drawable/matrialbtn_bkd"        android:orientation="horizontal">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:clickable="true"            android:paddingVertical="10dp"            android:paddingHorizontal="5sp"            android:focusable="true"            android:id="@+id/folder_LayoutParent_Mus"            android:orientation="vertical"            android:background="@drawable/ripple_effect"            >            <RelativeLayout                android:layout_width="match_parent"                android:orientation="horizontal"                android:gravity="center_vertical"                android:layout_height="wrap_content">                <com.google.android.material.imageview.ShapeableImageView                    android:id="@+id/folder_Image_Mus"                    android:layout_width="60dp"                    android:layout_height="45dp"                    android:layout_alignParentStart="true"                    android:src="@drawable/music_folder"                    app:shapeAppearance="@style/curved"                    />                <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:orientation="vertical"                    android:layout_marginStart="60dp"                    android:layout_marginEnd="30dp"                    >                    <TextView                        android:id="@+id/folder_Name_Mus"                        android:gravity="center_vertical"                        android:layout_gravity="center_vertical"                        android:maxLines="1"                        android:maxLength="70"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:text="@string/folder_name"                        android:textColor="@color/PayneGrey"                        android:textSize="16sp"                        />                    <TextView                        android:id="@+id/folder_itemCount_Mus"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:maxLength="100"                        android:maxLines="1"                        android:text="@string/total_song"                        android:textColor="@color/DarkGray"                        android:paddingEnd="30dp"                        android:textSize="12sp"                        tools:ignore="RtlSymmetry" />                </LinearLayout>                <ImageView                    android:id="@+id/back_fol"                    android:layout_width="28dp"                    android:layout_height="28dp"                    android:layout_alignParentEnd="true"                    android:rotation="180"                    android:layout_centerVertical="true"                    android:src="@drawable/arrow_back_ios_new_24_icon"                    app:tint="@color/PayneGrey"                    />            </RelativeLayout>        </LinearLayout>    </LinearLayout></RelativeLayout>