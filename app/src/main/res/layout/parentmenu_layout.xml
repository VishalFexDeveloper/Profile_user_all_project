<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:orientation="horizontal"    android:layout_width="match_parent"    android:padding="15dp"    android:background="?attr/selectableItemBackground"    android:clickable="true"    android:focusable="true"    android:id="@+id/LinearLayout_delete"    android:layout_height="wrap_content">    <ImageView        android:id="@+id/parent_Menu_img"        android:layout_width="26dp"        android:layout_height="26dp"        tools:ignore="ContentDescription"        app:tint="@color/DarkGray" />    <TextView        android:id="@+id/parent_Menu_text"        android:layout_marginStart="20dp"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textColor="@color/DarkGray"        android:textSize="18sp"        android:layout_gravity="center_vertical"        android:text="@string/name"/></LinearLayout>