<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginHorizontal="10dp"    android:layout_marginVertical="8dp"    android:orientation="vertical">    <androidx.cardview.widget.CardView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        app:cardCornerRadius="8dp"        android:backgroundTint="@android:color/transparent"        >        <LinearLayout            android:id="@+id/folder_LayoutParent"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@drawable/ripple_effect"            android:clickable="true"            android:focusable="true"            android:orientation="vertical"            android:padding="10dp">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="center_vertical"                android:orientation="horizontal">                <com.google.android.material.imageview.ShapeableImageView                    android:id="@+id/folder_Image"                    android:layout_width="60dp"                    android:layout_height="45dp"                    android:layout_alignParentStart="true"                    android:src="@drawable/folder"                    app:shapeAppearance="@style/curved" />                <TextView                    android:id="@+id/folder_Name"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_gravity="center_vertical"                    android:layout_marginHorizontal="8sp"                    android:layout_toEndOf="@id/folder_Image"                    android:gravity="center_vertical"                    android:maxLength="70"                    android:maxLines="1"                    android:paddingEnd="130dp"                    android:text="@string/folder_name"                    android:textColor="@color/PayneGrey"                    android:textSize="16sp"                    tools:ignore="RtlSymmetry" />                <TextView                    android:id="@+id/folder_itemCount"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_toStartOf="@id/back_fol"                    android:maxLines="1"                    android:text="@string/total_song"                    android:textColor="@color/DarkGray"                    android:textSize="14sp" />                <ImageView                    android:id="@+id/back_fol"                    android:layout_width="19dp"                    android:layout_height="19dp"                    android:layout_alignParentEnd="true"                    android:layout_centerVertical="true"                    android:rotation="180"                    android:src="@drawable/arrow_back_ios_new_24_icon"                    app:tint="@color/PayneGrey"                    tools:ignore="ContentDescription" />            </RelativeLayout>        </LinearLayout>    </androidx.cardview.widget.CardView></LinearLayout>