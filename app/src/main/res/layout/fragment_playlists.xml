<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MusicFragmentChild.PlaylistsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/new_folderAdd_LinearLayout"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/matrialbtn_bkd"
            >
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_add"
                app:tint="@color/PayneGrey" />

        </RelativeLayout>

        <TextView
            android:id="@+id/playlist_addText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="13dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/new_playlist"
            android:textColor="@color/PayneGrey"
            android:textSize="18sp"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="11dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#D54242"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:src="@drawable/icons8_heart_background"
                        app:tint="@color/white" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="9dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="13dp"
                        android:textColor="@color/PayneGrey"
                        android:maxLines="1"
                        android:text="Liked Songs"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/DarkGray"
                        android:textSize="12sp"
                        android:text="10 songs"
                        android:maxLines="1"
                        android:layout_marginStart="13dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:shapeAppearance="@style/corner50" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24sp"
                android:layout_centerInParent="true"
                android:src="@drawable/dots2"
                app:tint="@color/PayneGrey" />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="11dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#F23FDAA6"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:src="@drawable/star"
                        app:tint="@color/white" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="9sp"
                        android:layout_marginTop="4dp"
                        android:text="Most Played"
                        android:layout_marginStart="13dp"
                        android:textColor="@color/PayneGrey"
                        android:maxLines="1"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/DarkGray"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:layout_marginStart="13dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/menu_button_newPlaylist"
                app:shapeAppearance="@style/corner50" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24sp"
                android:layout_centerInParent="true"
                android:src="@drawable/dots2"
                app:tint="@color/PayneGrey" />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="11dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/Music_layout"
            android:background="?attr/selectableItemBackground"
            >

            <LinearLayout
                android:id="@+id/myPlaylist_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#4657C0"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:id="@+id/myPlaylist_folderIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:src="@drawable/clock"
                        app:tint="@color/white"
                        />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/myPlaylist_folderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recently Played"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="13dp"
                        android:textColor="@color/PayneGrey"
                        android:maxLines="1"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/myPlaylist_songsCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/DarkGray"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:layout_marginStart="13dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:shapeAppearance="@style/corner50" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24sp"
                android:layout_centerInParent="true"
                android:src="@drawable/dots2"
                app:tint="@color/PayneGrey" />


        </RelativeLayout>
    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlists_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>