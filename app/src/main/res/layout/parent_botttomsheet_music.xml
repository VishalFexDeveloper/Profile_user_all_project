<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"    android:layout_width="match_parent"    android:background="@drawable/parent_bottom_sheet_bkd"    android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="15dp">        <com.google.android.material.imageview.ShapeableImageView            android:id="@+id/parent_icon"            android:layout_width="42dp"            android:layout_height="42dp"            app:shapeAppearanceOverlay="@style/curved"/>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical"            android:gravity="center_vertical"            android:layout_marginStart="10dp">            <TextView                android:id="@+id/parent_title"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:textSize="14sp"                android:maxLines="1"                android:textColor="@color/PayneGrey"/>            <TextView                android:id="@+id/parent_dep"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:textSize="12sp"                android:maxLines="1"                android:textColor="@color/DarkGray"/>        </LinearLayout>    </LinearLayout>    <com.google.android.material.divider.MaterialDivider        android:layout_width="match_parent"        android:layout_height="wrap_content"/>    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/parentMenu_recycle"        android:layout_width="match_parent"        android:layout_height="330dp"/></LinearLayout>