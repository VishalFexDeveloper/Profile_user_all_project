<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"    android:padding="10dp"    android:background="?attr/selectableItemBackground"    android:id="@+id/videosList_LayoutGrid"    android:layout_marginBottom="10dp"    android:layout_height="wrap_content">    <RelativeLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content">        <com.google.android.material.imageview.ShapeableImageView            android:id="@+id/videoImage_grid"            android:layout_width="match_parent"            android:layout_height="100dp"            android:scaleType="centerCrop"            android:src="@drawable/shape_newlists_bkd"            android:background="#C85A5A5A"            />        <LinearLayout            android:layout_width="match_parent"            android:gravity="end"            android:layout_height="100dp">            <TextView                android:id="@+id/durationTextGrid"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="bottom"                android:paddingHorizontal="8sp"                android:background="#80787878"                android:textColor="@color/white"                android:textSize="16sp" />        </LinearLayout>    </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"    >        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical">            <TextView                android:id="@+id/videoName_grid"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:text="video name"                android:gravity="start"                android:layout_marginTop="5sp"                android:textColor="@color/PayneGrey"                android:maxLines="2"                />            <TextView                android:id="@+id/folderName_Video_grid"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:paddingTop="7dp"                android:gravity="start"                android:layout_marginEnd="25dp"                android:maxLines="1"                android:textSize="12sp"                android:textColor="@color/DarkGray"                />        </LinearLayout>    </LinearLayout></LinearLayout>