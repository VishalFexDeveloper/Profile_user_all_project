<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:gravity="center"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/blue"        android:orientation="vertical"        android:padding="20dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="New Playlist"            android:textColor="@color/PayneGrey"            android:textSize="20sp" />        <TextView            android:id="@+id/playlist_200"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="20dp"            android:text="Playlist Name"            android:textColor="@color/DarkGray"            android:layout_marginBottom="-8dp"            android:textSize="16sp" />        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <EditText                android:id="@+id/edit_query_text_dailog"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:paddingEnd="25dp"                android:singleLine="true"                />            <ImageButton                android:id="@+id/edit_query_visibility_dialog"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentEnd="true"                android:layout_centerVertical="true"                android:background="@android:color/transparent"                android:src="@drawable/icon_cancel"                android:visibility="gone"                app:tint="@color/PayneGrey" />        </RelativeLayout>        <TextView            android:id="@+id/editTextLenath_Dailog"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="end"            android:text="0 / 50"            android:textColor="#8D8D8D" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="20dp"            android:gravity="end">            <TextView                android:id="@+id/cancel_Btn_Dailog"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/ripple_background_color"                android:clickable="true"                android:focusable="true"                android:padding="8dp"                android:text="CANCEL"                android:textColor="@color/PayneGrey" />            <RelativeLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginStart="8dp">                <TextView                    android:id="@+id/create_Btn_visibility_Dailog"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:padding="8dp"                    android:text="CREATE"                    android:textColor="#5B5B5B" />                <TextView                    android:id="@+id/create_Btn_Dailog"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:background="@drawable/ripple_background_color"                    android:clickable="true"                    android:focusable="true"                    android:padding="8dp"                    android:text="CREATE"                    android:textColor="@color/PayneGrey"                    android:visibility="gone" />            </RelativeLayout>        </LinearLayout>    </LinearLayout></LinearLayout>