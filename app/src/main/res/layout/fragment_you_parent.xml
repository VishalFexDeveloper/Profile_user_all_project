<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context=".MainFragment.YouFragmentParent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/blue"
       app:cardElevation="@dimen/fab_margin"
        android:layout_height="280dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/you_bkd"
            />
    </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_you_bkd"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/matrialbtn_bkd"
                            android:padding="12dp"
                            android:gravity="end"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                android:gravity="end"
                                android:background="@drawable/shape_btn_bcd"
                                >

                                <com.google.android.material.button.MaterialButton
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?attr/selectableItemBackground"
                                    android:textStyle="bold"
                                    app:icon="@drawable/icons_setting_32"
                                    android:textSize="18sp"
                                    app:iconGravity="end"
                                    app:iconSize="27sp"
                                    app:iconTint="@color/PayneGrey"
                                    android:fontFamily="@font/alice"
                                    android:textColor="@color/PayneGrey"
                                    />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="match_parent"
                                android:baselineAligned="false">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_btn_bcd">
                                    <com.google.android.material.button.MaterialButton
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:background="?attr/selectableItemBackground"
                                        android:text="@string/back_up"
                                        android:textSize="20sp"
                                        app:icon="@drawable/backup"
                                        android:layout_margin="3sp"
                                        app:iconGravity="textEnd"
                                        android:textStyle="bold"
                                        app:iconSize="25sp"
                                        app:iconTint="@color/PayneGrey"
                                        android:fontFamily="@font/alice"
                                        android:textColor="@color/PayneGrey"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_btn_bcd">
                                    <com.google.android.material.button.MaterialButton
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:background="?attr/selectableItemBackground"
                                        android:text="@string/theme"
                                        android:layout_margin="3sp"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/alice"
                                        android:textColor="@color/PayneGrey"
                                        />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/matrialbtn_bkd"
                            android:padding="12dp"
                            android:gravity="end"
                            android:orientation="vertical"
                            android:layout_marginTop="25dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:baselineAligned="false"
                                tools:ignore="UselessParent">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_btn_bcd">
                                    <com.google.android.material.button.MaterialButton
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:background="?attr/selectableItemBackground"
                                        android:text="@string/history"
                                        app:iconTint="@color/PayneGrey"
                                        app:iconSize="25sp"
                                        app:icon="@drawable/icons8_history_48"
                                        app:iconGravity="textEnd"
                                        android:textSize="22sp"
                                        android:layout_margin="3sp"
                                        android:fontFamily="@font/alice"
                                        android:textStyle="bold"
                                        android:textColor="@color/PayneGrey"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_btn_bcd">
                                    <com.google.android.material.button.MaterialButton
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:background="?attr/selectableItemBackground"
                                        android:text="@string/privacy"
                                        android:textStyle="bold"
                                        app:icon="@drawable/icons_security_50"
                                        android:textSize="22sp"
                                        app:iconGravity="textEnd"
                                        app:iconSize="27sp"
                                        android:layout_margin="3sp"
                                        app:iconTint="@color/PayneGrey"
                                        android:fontFamily="@font/alice"
                                        android:textColor="@color/PayneGrey"
                                        />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/matrialbtn_bkd"
                            android:padding="12dp"
                            android:gravity="end"
                            android:orientation="vertical"
                            android:layout_marginTop="25dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                android:gravity="end|center_vertical"
                                android:background="@drawable/shape_btn_bcd">

                                <com.google.android.material.button.MaterialButton
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?attr/selectableItemBackground"
                                    android:text="@string/file_transfer"
                                    android:textStyle="bold"
                                    app:icon="@drawable/up_down"
                                    android:textSize="20sp"
                                    app:iconGravity="end"
                                    android:gravity="end|center_vertical"
                                    app:iconSize="27sp"
                                    app:iconTint="@color/PayneGrey"
                                    android:fontFamily="@font/alice"
                                    android:textColor="@color/PayneGrey"
                                    />

                            </LinearLayout>




                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/matrialbtn_bkd"
                            android:layout_marginVertical="25dp"
                            android:padding="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:baselineAligned="false">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_btn_bcd">
                                    <com.google.android.material.button.MaterialButton
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:background="?attr/selectableItemBackground"
                                        android:text="@string/back_up"
                                        android:textSize="20sp"
                                        app:icon="@drawable/backup"
                                        android:layout_margin="3sp"
                                        app:iconGravity="textEnd"
                                        android:textStyle="bold"
                                        app:iconSize="25sp"
                                        app:iconTint="@color/PayneGrey"
                                        android:fontFamily="@font/alice"
                                        android:textColor="@color/PayneGrey"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_btn_bcd">
                                    <com.google.android.material.button.MaterialButton
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:background="?attr/selectableItemBackground"
                                        android:text="@string/theme"
                                        android:layout_margin="3sp"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/alice"
                                        android:textColor="@color/PayneGrey"
                                        />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_height="match_parent"
                                android:baselineAligned="false">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_btn_bcd">
                                    <com.google.android.material.button.MaterialButton
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:background="?attr/selectableItemBackground"
                                        android:text="@string/back_up"
                                        android:textSize="20sp"
                                        app:icon="@drawable/backup"
                                        android:layout_margin="3sp"
                                        app:iconGravity="textEnd"
                                        android:textStyle="bold"
                                        app:iconSize="25sp"
                                        app:iconTint="@color/PayneGrey"
                                        android:fontFamily="@font/alice"
                                        android:textColor="@color/PayneGrey"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/shape_btn_bcd">
                                    <com.google.android.material.button.MaterialButton
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:background="?attr/selectableItemBackground"
                                        android:text="@string/theme"
                                        android:layout_margin="3sp"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/alice"
                                        android:textColor="@color/PayneGrey"
                                        />
                                </LinearLayout>

                            </LinearLayout>



                        </LinearLayout>



                    </LinearLayout>
                </ScrollView>


            </LinearLayout>





        </LinearLayout>





</LinearLayout>